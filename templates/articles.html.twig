    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for article in articles %}
    <tr scope="row">     
    <td>{{ article.id }}</td>
    <td>{{ article.name }}</td>
    <td>{{ article.description }}</td>
    <td>{{ article.price }}</td>
    <td>{{ article.quantity }}</td>
    <td>
      <a href="./article-delete.php?id={{article.id}}" class="m-1 text-secondary">Delete</a>
      <a href="./article-edit.php?id={{article.id}}" class="m-1 text-secondary">Edit</a>
    </td>
    {% endfor %}
